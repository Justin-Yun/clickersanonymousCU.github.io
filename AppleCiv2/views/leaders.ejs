<!-- views/leaders.ejs -->

<head>
  <style>
    table {
      margin-top: 45px;
      font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
      border: 1;
      border-collapse: collapse;
      width: 70%;
      margin-left: auto;
      margin-right: auto
    }

    td,
    th {
      border: 1px solid #ddd;
      padding: 8px;
    }

    .tr {
      text-align: center;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    #body:hover {
      background-color: #ddd;
    }

    a {
      margin-left: auto;
      margin-right: auto;
    }
  </style>
</head>

<body>
  <h1 style="text-align:center">Here's the leaderboard! </h1>
  <table>
    <tr>
      <th>Rank</th>
      <th>Username</th>
      <th>Score</th>
    </tr>
    <% if(data) { %>
      <%   i = 1; %>
        <% data.forEach(function(item){ %>
          <tr id="body">
            <td>
              <%= i %>
            </td>
            <td>
              <%= item.username%>
            </td>
            <td>
              <%= item.score%>
            </td>
          </tr>
          <% i++;
      })
    } %>
  </table>
  <div>
    <a href="/profile"><button>Go Home</button></a>
  </div>
</body>

